<UserControl x:Class="SinTachiePlugin.LayerValueListController.LayerValueListController"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SinTachiePlugin.LayerValueListController.Controller"
             xmlns:c="clr-namespace:YukkuriMovieMaker.Controls;assembly=YukkuriMovieMaker.Controls"
             xmlns:layerValCnt="clr-namespace:SinTachiePlugin.LayerValueListController.Controller"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" d:DataContext="{d:DesignInstance Type={x:Type local:LayerValueListControllerViewModel}}">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../../Resource/MaterialIcons.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="104"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="26"/>
            </Grid.ColumnDefinitions>
            
            <ListBox Grid.Column="0" HorizontalContentAlignment="Stretch" ItemsSource="{Binding Path=LayerValues}" SelectedIndex="{Binding SelectedIndex, Mode=TwoWay}" Name="list" ScrollViewer.CanContentScroll="False">
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Height" Value="30"/>
                    </Style>
                </ListBox.ItemContainerStyle>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Border BorderBrush="#FF808080" BorderThickness="1">
                                <StackPanel Margin="0,0,0,0" VerticalAlignment="Center" Orientation="Horizontal">
                                    <Border Margin="4,4,0,4" Background="#80808080" BorderThickness="1" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Cerrar.Values[0].Value,StringFormat={}{0:F1}%}" Margin="4,0,4,0"
                                                   VerticalAlignment="Center" FontSize="12"
                                                   ToolTip="{x:Static layerValCnt:Resources.CerrarValueToolTip}"/>
                                    </Border>
                                    <TextBlock Text="~" Margin="4,4,0,4" VerticalAlignment="Center" FontSize="12"/>
                                    <Border Margin="4,4,0,4" Background="#80808080" BorderThickness="1" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Abrir.Values[0].Value,StringFormat={}{0:F1}%}" Margin="4,0,4,0"
                                                   VerticalAlignment="Center" FontSize="12"
                                                   ToolTip="{x:Static layerValCnt:Resources.AbrirValueToolTip}"/>
                                    </Border>
                                    <TextBlock Text="{Binding Comment}" Margin="10,4,0,4" VerticalAlignment="Center" FontSize="12"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="26"/>
                    <RowDefinition Height="26"/>
                    <RowDefinition Height="26"/>
                    <RowDefinition Height="26"/>
                </Grid.RowDefinitions>

                <Button Grid.Row="0" Content="{StaticResource Plus}" Command="{Binding AddCommand}"
                        CommandParameter="{Binding ElementName=list,Path=SelectedIndex}"
                        ToolTip="{x:Static layerValCnt:Resources.AddButtonToolTip}"/>
                <Button Grid.Row="1" Content="{StaticResource Minus}" Command="{Binding RemoveCommand}"
                        CommandParameter="{Binding ElementName=list,Path=SelectedIndex}"
                        ToolTip="{x:Static layerValCnt:Resources.RemoveButtonToolTip}"/>
                <Button Grid.Row="2" Content="{StaticResource Up}" Command="{Binding MoveUpCommand}"
                        CommandParameter="{Binding ElementName=list,Path=SelectedIndex}"
                        ToolTip="{x:Static  layerValCnt:Resources.MoveUpButtonToolTip}"/>
                <Button Grid.Row="3" Content="{StaticResource Down}" Command="{Binding MoveDownCommand}"
                        CommandParameter="{Binding ElementName=list,Path=SelectedIndex}"
                        ToolTip="{x:Static layerValCnt:Resources.MoveDownButtonToolTip}"/>
            </Grid>
        </Grid>
        <c:PropertiesEditor 
        Grid.Row="1"
        Target="{Binding ElementName=list,Path=SelectedValue}"
        BeginEdit="PropertiesEditor_BeginEdit" 
        EndEdit="PropertiesEditor_EndEdit">
        </c:PropertiesEditor>
    </Grid>
</UserControl>
